@using AR.SimTaxi.Models.Passengers
@model IEnumerable<PassengerViewModel>

@{
    ViewData["Title"] = "Passengers";
}

<h1>Passengers</h1>

<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Create a New Passenger</a>
</p>

<hr />

<table class="table table-hover table-striped data-tables">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var passenger in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => passenger.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => passenger.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => passenger.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => passenger.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => passenger.Gender)
            </td>
                <td>
                    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@passenger.Id" title="Edit">
                        <i class="fa-solid fa-pen-fancy"></i>
                    </a>

                    <a class="text-decoration-none ms-1" asp-action="Details" asp-route-id="@passenger.Id" title="Details">
                        <i class="fa-solid fa-circle-info text-info"></i>
                    </a>

                    <a href="#" class="text-decoration-none ms-1" title="Delete" data-bs-toggle="modal" data-bs-target="#deleteModal_@passenger.Id">
                        <i class="fa-solid fa-trash text-danger"></i>
                    </a>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal_@passenger.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Passenger</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <h4>
                                        Are you sure you want to delete passenger
                                        <span class="text-danger">@passenger.FullName</span>?
                                    </h4>
                                </div>
                                <div class="modal-footer">

                                    <form asp-action="Delete">
                                        <input type="hidden" name="id" value="@passenger.Id" />
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>


                </td>
        </tr>
}
    </tbody>
</table>
