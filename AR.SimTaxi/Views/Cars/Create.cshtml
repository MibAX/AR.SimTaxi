@using AR.SimTaxi.Enums
@using AR.SimTaxi.Models.Cars
@model CreateUpdateCarViewModel

@{
    ViewData["Title"] = "Create Car";
}

<h1>Create Car</h1>
<hr />

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="PlateNumber" class="control-label"></label>
                <input asp-for="PlateNumber" class="form-control" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label"></label>
                <input asp-for="ProductionDate" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CarType" class="control-label"></label>
                <select asp-for="CarType" class="form-control select-2" asp-items="@Html.GetEnumSelectList<CarType>()"></select>
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="PowerType" class="control-label"></label>
                <select asp-for="PowerType" class="form-control select-2" asp-items="@Html.GetEnumSelectList<PowerType>()"></select>
                <span asp-validation-for="PowerType" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-4">
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <input type="submit" value="Create" class="btn btn-primary ms-2" />
    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
