@using AR.SimTaxi.Models.Cars
@model CarDetailsViewModel

@{
    ViewData["Title"] = "Car Details";
}

<h1>
    Car Details
    <span class="text-primary">@Model.Model - @Model.PlateNumber</span>
</h1>

<hr />


<dl class="row">

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DriverFullName)
    </dt>
    <dd class="col-sm-10">

        @if(string.IsNullOrWhiteSpace(Model.DriverFullName))
        {
            <span class="fst-italic text-muted">n/a</span>
        }
        else
        {
            <span>
                @Html.DisplayFor(model => model.DriverFullName)
            </span>
        }

    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Model)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Model)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Color)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Color)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PlateNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PlateNumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Year)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Year)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CarType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CarType)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PowerType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PowerType)
    </dd>
</dl>


<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary ms-2">Edit</a>
</div>
